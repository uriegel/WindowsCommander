<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
		<PublishSingleFile>true</PublishSingleFile>
    <ApplicationIcon>Resources\Kirk.ico</ApplicationIcon>
		<FileVersion>1.0.0.0</FileVersion>
		<LangVersion>Preview</LangVersion>
	</PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="./Resources/website/index.html">
      <LogicalName>/index.html</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="./Resources/website/script.js">
      <LogicalName>/script.js</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="./Resources/website/style.css">
      <LogicalName>/style.css</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="./Resources/folder.png">
      <LogicalName>folder</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="./Resources/drive.png">
      <LogicalName>drive</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="./Resources/networkshare.png">
      <LogicalName>networkshare</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="./Resources/windowsdrive.png">
      <LogicalName>windowsdrive</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="./Resources/kirk.png">
      <LogicalName>/windowicon</LogicalName>
    </EmbeddedResource>    
    <EmbeddedResource Include="./Resources/Kirk.ico">
      <LogicalName>icon</LogicalName>
    </EmbeddedResource>
  </ItemGroup>    

  <ItemGroup>
    <PackageReference Include="URiegel.WebSocketClient" Version="1.0.0" />
    <PackageReference Include="WebWindowNetCore" Version="11.0.19-beta-19" />
    <PackageReference Include="WebServerLight" Version="1.0.5" />
    <PackageReference Include="System.Reactive" Version="6.0.1" />
  </ItemGroup>

</Project>

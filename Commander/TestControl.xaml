    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBox KeyboardNavigation.IsTabStop="False" Text ="{Binding Path}" 
				    KeyDown="TextBox_KeyDown" GotFocus="TextBox_GotFocus" 
				    BorderThickness="0" />
        <Grid Grid.Row="1" Name="griddie" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"  />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="20, 0, 0, 0" Text="Name" ></TextBlock>
            <TextBlock Margin="20, 0, 0, 0" Grid.Column="1" Text="Zeit"></TextBlock>
            <TextBlock Margin="20, 0, 0, 0" Grid.Column="2" TextAlignment="Right" Text="Größe"></TextBlock>
        </Grid>
        <ListView Grid.Row="2" Name="PeopleListView" 
                  VirtualizingPanel.VirtualizationMode="Recycling" 
                  HorizontalContentAlignment="Stretch"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}, Path=DataContext.W1}" />
                            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}, Path=DataContext.W2}" />
                            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}, Path=DataContext.W3}" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Margin="0, 0, 5, 0" Text="{Binding Name}" Padding="0" TextTrimming="CharacterEllipsis" />
                        <TextBlock Margin="0, 0, 5, 0" Grid.Column="1" TextTrimming="CharacterEllipsis" Text="{Binding DateTime}" />
                        <TextBlock Margin="5, 0, 0, 0" Grid.Column="2" TextAlignment="Right" TextTrimming="CharacterEllipsis"
                            Text="{Binding Size}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.Resources>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource {x:Type ListViewItem}}">
                    <Setter Property="Padding" Value="4,2"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="MinHeight" Value="0"/>
                </Style>
            </ListView.Resources>
        </ListView>
    </Grid>
</UserControl>

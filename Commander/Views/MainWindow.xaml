<Window x:Class="Commander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Commander"
        mc:Ignorable="d"
        Icon="/Resources/Kirk.ico"
        Title="Commander" Width="600" Height="800" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="15" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" MinWidth="15" />
        </Grid.ColumnDefinitions>
        <local:TestControl Grid.Column="0" HorizontalAlignment="Stretch"></local:TestControl>
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Cursor="SizeWE" Background="Transparent"  />
        <local:TestControl Grid.Column="2" HorizontalAlignment="Stretch"></local:TestControl>
    </Grid>
</Window>
